name: Upload Conda Package to Anaconda

on:
  workflow_run:
    workflows: ["pypi-publish"] # Replace with the exact name of your PyPI workflow
    types:
      - completed
  workflow_dispatch:

jobs:
  build-and-upload:
    runs-on: ubuntu-latest

    steps:
      - name: Check out the repository code
        uses: actions/checkout@v4

      - name: Set up Miniconda
        uses: conda-incubator/setup-miniconda@v2
        with:
          auto-update-conda: true

      - name: Install Grayskull
        run: |
          conda install -c conda-forge grayskull

      - name: Generate meta.yaml with Grayskull
        run: |
          grayskull pypi simple-mri

      - name: Configure conda channels
        run: |
          conda config --add channels conda-forge
          conda config --set anaconda_upload yes

      - name: Build Conda Package
        run: conda-build .

      - name: Install Anaconda CLI
        run: conda install -c anaconda anaconda-client

      - name: Login to Anaconda
        env:
          ANACONDA_API_TOKEN: ${{ secrets.ANACONDA_API_TOKEN }}
        run: anaconda login --username jorgenriseth --password $ANACONDA_API_TOKEN

      - name: Upload Conda Package to Anaconda Cloud
        run: |
          export PACKAGE_PATH=$(conda build . --output)
          anaconda upload --user jorgenriseth $PACKAGE_PATH
